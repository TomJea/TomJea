<h1>Tasks List</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.title,task_path(task) %> <%= task.done == true ? "[X]" : "[ ]"%></h2>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }%>
  <%= link_to "Mark as done", done_task_path(task), method: :patch%>
<% end %>

<p><%= link_to "New task", new_task_path%></p>
